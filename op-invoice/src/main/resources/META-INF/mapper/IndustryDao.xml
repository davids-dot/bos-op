<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.luoge.bos.op.invoice.common.IndustryDao">

    <sql id="cols">
        <trim>
            id, name, example_enterprise, invoice_items
        </trim>
    </sql>

    <select id="getById" resultType="com.luoge.bos.op.invoice.entity.invoice.IndustryDO">
        select
        <include refid="cols"/>
        from inv_industry
        where id=#{id}
    </select>

    <select id="listAll" resultType="com.luoge.bos.op.invoice.entity.invoice.IndustryDO">
        select
        <include refid="cols"/>
        from inv_industry
        order by id desc
    </select>
</mapper>